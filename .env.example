# reCAPTCHA Keys (for contact form)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Email Configuration (for contact form)
EMAIL=your_email@example.com
PASSWORD=your_email_app_password

# Keystatic Admin Authentication
# Copy this file to .env.local and update with your credentials
KEYSTATIC_ADMIN_USERNAME=admin
KEYSTATIC_ADMIN_PASSWORD=your_secure_password_here
KEYSTATIC_SESSION_SECRET=generate_with_node_crypto_randomBytes_32_base64

# GitHub Configuration (for Keystatic GitHub storage in production)
NEXT_PUBLIC_GITHUB_OWNER=your-github-username
NEXT_PUBLIC_GITHUB_REPO=your-repo-name
GITHUB_CLIENT_ID=your-github-oauth-client-id
GITHUB_CLIENT_SECRET=your-github-oauth-client-secret
